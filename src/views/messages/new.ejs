<%- include('../partials/header')%> <%- include('../partials/navbar')%>
<div class="container p-4">
	<div class="row">
		<h2>New message</h2>
		<form action="/messages/new/<%= receiverId%>" method="post" class="col-6">
			<div class="mb-3">
				<label for="receiverName" class="form-label">To:</label>
				<input
					type="text"
					class="form-control"
					id="receiverName"
					disabled
					value="<%= receiverName %>"
				/>
				<input
					type="number"
					name="receiver"
					class="d-none"
					id="receiverName"
					value="<%= receiverId %>"
				/>
			</div>
			<div class="mb-3">
				<label for="title" class="form-label">Title:</label>
				<input
					type="text"
					class="form-control"
					id="title"
					name="title"
					value=""
					required
				/>
			</div>
			<div class="mb-3">
				<label for="message">Message:</label>
				<textarea
					name="message"
					id="message"
					cols="30"
					rows="10"
					class="form-control"
					maxlength="200"
					required
				>
				</textarea>
				<div class="my-3 d-flex justify-content-between">
					<span id="messageCountLabel" class="mt-3">0/200</span>
					<div class="">
						<input
							class="btn btn-success rounded-3 form-control"
							value="Upload"
							type="file"
							id="inputFile"
						/>
					</div>
				</div>
				<div class="d-flex justify-content-center">
					<input
						type="submit"
						class="btn btn-info rounded-3 center"
						value="Cipher"
					/>
				</div>
			</div>
		</form>
	</div>
</div>
<script src="/js/loadMessage.js"></script>
<%- include('../partials/footer')%>
