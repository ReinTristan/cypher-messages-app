<%- include('../partials/header')%> <%- include('../partials/navbar')%>
<div class="container p-4">
	<div class="row">
		<h2>Contacts list</h2>
		<table class="table table-dark table-striped table-hover">
			<thead>
				<tr>
					<th scope="col">Username</th>
					<th scope="col">Total Messages Sent</th>
					<th scope="col">Total Messages Received</th>
					<th scope="col">New Message</th>
				</tr>
			</thead>
			<tbody>
				<% for(contact of contacts) { %>
				<tr>
					<td class="mx-auto"><%= contact.username %></td>
					<td><%= contact.totalSent%></td>
					<td><%= contact.totalReceived%></td>

					<td>
						<a
							href="/messages/new/<%= contact.id %>"
							class="btn btn-success px-3 py-2"
							>New</a
						>
					</td>
				</tr>
				<% } %>
			</tbody>
		</table>
	</div>
</div>

<%-include('../partials/footer')%>
