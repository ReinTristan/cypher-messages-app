<%- include('../partials/header')%> <%- include('../partials/navbar')%>
<%-include('../partials/flash')%>
<div class="container p-4">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card text-center rounded-3">
				<div class="card-header">
					<h3>Log in</h3>
				</div>
				<div class="card-body">
					<img
						src="img/cipher.webp"
						alt="logo cipher"
						class="card-img-top mx-auto m-2 rounded-circle w-50"
					/>
					<form action="/login" method="POST">
						<div class="mb-3">
							<input
								type="email"
								name="email"
								class="form-control"
								placeholder="Email"
								required
							/>
						</div>
						<div class="mb-3">
							<input
								type="password"
								name="password"
								class="form-control"
								placeholder="Password"
								required
							/>
						</div>
						<div class="d-grid gap-2">
							<button class="btn btn-success rounded-pill">Login</button>
						</div>
					</form>
				</div>
				<p>No account? <a href="/register">Create one!</a></p>
			</div>
		</div>
	</div>
</div>
<%- include('../partials/footer')%>
